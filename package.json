{
  "name": "base-express-server",
  "version": "0.1.0",
  "author": "Marco Ant√¥nio <ma.souza.junior@gmail.com>",
  "main": "./src/main.js",
  "license": "(ISC OR GPL-3.0)",
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "NODE_ENV=development nodemon --exec rollup -c rollup.config.js --silent",
    "start:prod": "nodemon --exec 'yarn build && ./build/server'",
    "build": "NODE_ENV=production rollup -c rollup.config.js | nexe -o build/server",
    "docker:build": "docker build -t $(basename $PWD) .",
    "docker:run": "docker run -it -p 3000:3000 $(basename $PWD):latest"
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "express": "^4.16.4",
    "nexe": "^3.0.3",
    "nodemon": "^1.18.10",
    "rollup": "^1.9.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.0",
    "rollup-plugin-run": "^1.1.0",
    "swagger-jsdoc": "^3.2.8",
    "swagger-ui-express": "^4.0.2"
  },
  "nodemonConfig": {
    "restartable": "r",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": false,
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "src/*",
      "rollup.config.js"
    ],
    "ext": "js,json"
  }
}
