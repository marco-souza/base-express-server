{
  "name": "base-express-server",
  "version": "0.1.0",
  "author": "Marco Ant√¥nio <ma.souza.junior@gmail.com>",
  "main": "./src/main.js",
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "NODE_ENV=development nodemon --exec rollup -c rollup.config.js --silent",
    "start:prod": "nodemon --exec 'yarn build && ./build/server'",
    "build": "NODE_ENV=production rollup -c rollup.config.js | nexe -o build/server"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "nexe": "^3.0.3",
    "nodemon": "^1.18.10",
    "rollup": "^1.9.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.0",
    "rollup-plugin-run": "^1.1.0"
  },
  "nodemonConfig": {
    "restartable": "r",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": false,
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "src/*"
    ],
    "ext": "js,json"
  }
}
